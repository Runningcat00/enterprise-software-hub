# Environment Variables for Enterprise Software Hub

# === EMAIL MARKETING SERVICES ===

# ConvertKit (Recommended for professional email marketing)
CONVERTKIT_API_KEY=your_convertkit_api_key
CONVERTKIT_FORM_ID=your_form_id
CONVERTKIT_API_SECRET=your_api_secret

# Mailchimp (Alternative email service)
MAILCHIMP_API_KEY=your_mailchimp_api_key-us6
MAILCHIMP_LIST_ID=your_list_id

# Beehiiv (Newsletter-focused platform)
BEEHIIV_API_KEY=your_beehiiv_api_key
BEEHIIV_PUBLICATION_ID=your_publication_id

# === ANALYTICS & TRACKING ===

# Google Analytics 4
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel (Optional)
FACEBOOK_PIXEL_ID=your_pixel_id

# === AFFILIATE TRACKING ===

# Affiliate program tracking
AFFILIATE_TRACKING_DOMAIN=your_tracking_domain
SALESFORCE_AFFILIATE_ID=your_salesforce_id
HUBSPOT_AFFILIATE_ID=your_hubspot_id
MONDAY_AFFILIATE_ID=your_monday_id

# === BUSINESS CONFIGURATION ===

# Site Configuration
SITE_NAME=Enterprise Software Hub
SITE_URL=https://enterprisesoftwarehub.com
COMMUNITY_SIZE=30000+
LAUNCH_TIMELINE=2-3 weeks

# Business Email
BUSINESS_EMAIL=hello@enterprisesoftwarehub.com
SUPPORT_EMAIL=support@enterprisesoftwarehub.com
PARTNERSHIPS_EMAIL=partnerships@enterprisesoftwarehub.com

# === WEBHOOK INTEGRATIONS ===

# Zapier Webhook (Fallback option)
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/YOUR_ID/YOUR_KEY/

# Make.com Webhook (Alternative)
MAKE_WEBHOOK_URL=https://hook.us1.make.com/your_webhook_id

# === DATABASE (Future expansion) ===

# Database URL (if adding database later)
DATABASE_URL=your_database_connection_string

# Redis URL (for caching)
REDIS_URL=your_redis_connection_string

# === EXTERNAL SERVICES ===

# SendGrid (For transactional emails)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@enterprisesoftwarehub.com

# Twilio (For SMS notifications - optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# === SECURITY ===

# JWT Secret (for authentication features)
JWT_SECRET=your_jwt_secret_key

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your_encryption_key

# === DEVELOPMENT ===

# Environment
NODE_ENV=production
# NODE_ENV=development

# Debug Mode
DEBUG_MODE=false

# API Rate Limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX_REQUESTS=100

# === EMAIL MARKETING CONFIGURATION EXAMPLES ===

# ConvertKit Setup Example:
# 1. Sign up at convertkit.com
# 2. Go to Settings → API Keys
# 3. Copy API Key and API Secret
# 4. Create a form and copy Form ID
# CONVERTKIT_API_KEY=abc123def456
# CONVERTKIT_FORM_ID=1234567
# CONVERTKIT_API_SECRET=xyz789abc123

# Mailchimp Setup Example:
# 1. Sign up at mailchimp.com
# 2. Go to Profile → Extras → API Keys
# 3. Create API Key (format: key-us6)
# 4. Create audience and copy List ID
# MAILCHIMP_API_KEY=abc123def456-us6
# MAILCHIMP_LIST_ID=abc123def4

# Beehiiv Setup Example:
# 1. Sign up at beehiiv.com
# 2. Go to Settings → Integrations → API
# 3. Generate API Key
# 4. Copy Publication ID from URL
# BEEHIIV_API_KEY=bh_api_abc123def456
# BEEHIIV_PUBLICATION_ID=pub_abc123def456